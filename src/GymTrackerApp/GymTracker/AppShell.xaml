<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GymTracker"
    xmlns:pages="clr-namespace:GymTracker.Pages"
    Title="GymTracker">

    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" Title="Logout"/>
    <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage" Title="Home"/>
    <ShellContent ContentTemplate="{DataTemplate pages:ExercisePage}" Route="ExercisePage"/>

</Shell>
